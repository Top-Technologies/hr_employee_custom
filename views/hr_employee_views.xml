<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form_inherit_custom" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.custom</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='birthday']" position="after">
                <field name="age" readonly="1"/>
            </xpath>


            <xpath expr="//page[@name='skills_resume']//div[hasclass('o_group_resume')]/separator" position="before">
                <group name="experience_summary_group">
                    <group>
                        <field name="experience_summary" readonly="1"/>
                    </group>
                </group>
            </xpath>


            <xpath expr="//field[@name='resume_line_ids']/list/field[@name='date_end']" position="after">
                <field name="experience_duration" string="Duration (Cal.)" 
                       decoration-info="experience_duration != False"/>
            </xpath>
        </field>
    </record>
</odoo>

